{
  "name": "Change exchange rate with valid value",
  "comment": "Owner changes exchange rate from 100 to 200",
  "steps": [
    {
      "step": "setState",
      "accounts": {
        "owner": {
          "nonce": 0,
          "balance": "1000000000000000000"
        }
      }
    },
    {
      "step": "scDeploy",
      "txId": "deploy",
      "tx": {
        "from": "owner",
        "contractCode": "file:output/requests-contract.wasm",
        "arguments": [
          "100"
        ],
        "gasLimit": 60000000,
        "gasPrice": 1000000000
      }
    },
    {
      "step": "scCall",
      "txId": "change_rate",
      "tx": {
        "from": "owner",
        "to": "sc:deploy",
        "function": "changeNumRequestsPerEGLD",
        "arguments": [
          "200"
        ],
        "gasLimit": 5000000,
        "gasPrice": 1000000000
      },
      "expect": {
        "out": [],
        "status": 0,
        "logs": [
          {
            "address": "sc:deploy",
            "identifier": "changeNumRequestsPerEGLD",
            "topics": [],
            "data": "0x*"
          }
        ]
      }
    }
  ]
}
