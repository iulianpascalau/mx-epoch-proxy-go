{
  "name": "Change exchange rate to zero",
  "comment": "Owner tries to change exchange rate to 0, should fail",
  "steps": [
    {
      "step": "setState",
      "accounts": {
        "owner": {
          "nonce": 0,
          "balance": "1000000000000000000"
        }
      }
    },
    {
      "step": "scDeploy",
      "txId": "deploy",
      "tx": {
        "from": "owner",
        "contractCode": "file:output/requests-contract.wasm",
        "arguments": [
          "100"
        ],
        "gasLimit": 60000000,
        "gasPrice": 1000000000
      }
    },
    {
      "step": "scCall",
      "txId": "change_rate",
      "tx": {
        "from": "owner",
        "to": "sc:deploy",
        "function": "changeNumRequestsPerEGLD",
        "arguments": [
          "0"
        ],
        "gasLimit": 5000000,
        "gasPrice": 1000000000
      },
      "expect": {
        "status": 4,
        "message": "*Number of requests per EGLD must be non-zero*"
      }
    }
  ]
}
