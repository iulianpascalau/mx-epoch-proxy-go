{
  "name": "Complete pause/unpause workflow",
  "comment": "Test full pause/unpause cycle with requests",
  "steps": [
    {
      "step": "setState",
      "accounts": {
        "owner": {
          "nonce": 0,
          "balance": "1000000000000000000"
        },
        "user": {
          "nonce": 0,
          "balance": "5000000000000000000"
        }
      }
    },
    {
      "step": "scDeploy",
      "txId": "deploy",
      "tx": {
        "from": "owner",
        "contractCode": "file:output/requests-contract.wasm",
        "arguments": [
          "100"
        ],
        "gasLimit": 60000000,
        "gasPrice": 1000000000
      }
    },
    {
      "step": "scCall",
      "txId": "add_requests_1",
      "tx": {
        "from": "user",
        "to": "sc:deploy",
        "function": "addRequests",
        "arguments": [
          "42"
        ],
        "value": "1000000000000000000",
        "gasLimit": 5000000,
        "gasPrice": 1000000000
      },
      "expect": {
        "status": 0
      }
    },
    {
      "step": "scQuery",
      "txId": "query_1",
      "tx": {
        "to": "sc:deploy",
        "function": "getRequests",
        "arguments": [
          "42"
        ]
      },
      "expect": {
        "out": [
          "100"
        ]
      }
    },
    {
      "step": "scCall",
      "txId": "pause",
      "tx": {
        "from": "owner",
        "to": "sc:deploy",
        "function": "pause",
        "arguments": [],
        "gasLimit": 5000000,
        "gasPrice": 1000000000
      },
      "expect": {
        "status": 0
      }
    },
    {
      "step": "scCall",
      "txId": "add_requests_paused",
      "tx": {
        "from": "user",
        "to": "sc:deploy",
        "function": "addRequests",
        "arguments": [
          "42"
        ],
        "value": "1000000000000000000",
        "gasLimit": 5000000,
        "gasPrice": 1000000000
      },
      "expect": {
        "status": 4,
        "message": "*Contract is paused*"
      }
    },
    {
      "step": "scQuery",
      "txId": "query_2",
      "tx": {
        "to": "sc:deploy",
        "function": "getRequests",
        "arguments": [
          "42"
        ]
      },
      "expect": {
        "out": [
          "100"
        ]
      }
    },
    {
      "step": "scCall",
      "txId": "unpause",
      "tx": {
        "from": "owner",
        "to": "sc:deploy",
        "function": "unpause",
        "arguments": [],
        "gasLimit": 5000000,
        "gasPrice": 1000000000
      },
      "expect": {
        "status": 0
      }
    },
    {
      "step": "scCall",
      "txId": "add_requests_2",
      "tx": {
        "from": "user",
        "to": "sc:deploy",
        "function": "addRequests",
        "arguments": [
          "42"
        ],
        "value": "1000000000000000000",
        "gasLimit": 5000000,
        "gasPrice": 1000000000
      },
      "expect": {
        "status": 0
      }
    },
    {
      "step": "scQuery",
      "txId": "query_3",
      "tx": {
        "to": "sc:deploy",
        "function": "getRequests",
        "arguments": [
          "42"
        ]
      },
      "expect": {
        "out": [
          "200"
        ]
      }
    }
  ]
}
