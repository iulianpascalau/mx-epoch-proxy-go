{
  "name": "Pause contract as non-owner",
  "comment": "Non-owner tries to pause, should fail",
  "steps": [
    {
      "step": "setState",
      "accounts": {
        "owner": {
          "nonce": 0,
          "balance": "1000000000000000000"
        },
        "attacker": {
          "nonce": 0,
          "balance": "1000000000000000000"
        }
      }
    },
    {
      "step": "scDeploy",
      "txId": "deploy",
      "tx": {
        "from": "owner",
        "contractCode": "file:output/requests-contract.wasm",
        "arguments": [
          "100"
        ],
        "gasLimit": 60000000,
        "gasPrice": 1000000000
      }
    },
    {
      "step": "scCall",
      "txId": "pause",
      "tx": {
        "from": "attacker",
        "to": "sc:deploy",
        "function": "pause",
        "arguments": [],
        "gasLimit": 5000000,
        "gasPrice": 1000000000
      },
      "expect": {
        "status": 4,
        "message": "*Only the owner can pause the contract*"
      }
    }
  ]
}
