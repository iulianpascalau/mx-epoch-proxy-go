{
  "name": "Add requests for a single user",
  "comment": "User sends 1 EGLD, should receive 100 requests (100 * 1 EGLD)",
  "steps": [
    {
      "step": "setState",
      "accounts": {
        "owner": {
          "nonce": 0,
          "balance": "1000000000000000000"
        },
        "user": {
          "nonce": 0,
          "balance": "2000000000000000000"
        }
      }
    },
    {
      "step": "scDeploy",
      "txId": "deploy",
      "tx": {
        "from": "owner",
        "contractCode": "file:output/requests-contract.wasm",
        "arguments": [
          "100"
        ],
        "gasLimit": 60000000,
        "gasPrice": 1000000000
      }
    },
    {
      "step": "scCall",
      "txId": "add_requests",
      "tx": {
        "from": "user",
        "to": "sc:deploy",
        "function": "addRequests",
        "arguments": [
          "42"
        ],
        "value": "1000000000000000000",
        "gasLimit": 5000000,
        "gasPrice": 1000000000
      },
      "expect": {
        "out": [],
        "status": 0,
        "logs": [
          {
            "address": "sc:deploy",
            "identifier": "addRequests",
            "topics": [
              "42",
              "1000000000000000000"
            ],
            "data": "0x*"
          }
        ]
      }
    },
    {
      "step": "scQuery",
      "txId": "query_requests",
      "tx": {
        "to": "sc:deploy",
        "function": "getRequests",
        "arguments": [
          "42"
        ]
      },
      "expect": {
        "out": [
          "100000000000000000000"
        ]
      }
    }
  ]
}
