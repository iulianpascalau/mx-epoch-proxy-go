{
  "name": "Change exchange rate affects future requests only",
  "comment": "Changing rate should not affect previously acquired requests",
  "steps": [
    {
      "step": "setState",
      "accounts": {
        "address:owner": {
          "nonce": "0",
          "balance": "1000000000000000000"
        },
        "address:user": {
          "nonce": "0",
          "balance": "3000000000000000000"
        }
      },
      "newAddresses": [
        {
          "creatorAddress": "address:owner",
          "creatorNonce": "0",
          "newAddress": "sc:requests"
        }
      ]
    },
    {
      "step": "scDeploy",
      "txId": "deploy",
      "tx": {
        "from": "address:owner",
        "contractCode": "mxsc:../output/requests.mxsc.json",
        "arguments": [
          "100"
        ],
        "gasLimit": "60000000",
        "gasPrice": "1000000000"
      }
    },
    {
      "step": "scCall",
      "txId": "add_requests_1",
      "tx": {
        "from": "address:user",
        "to": "sc:requests",
        "function": "addRequests",
        "arguments": [
          "42"
        ],
        "value": "1000000000000000000",
        "gasLimit": "5000000",
        "gasPrice": "1000000000"
      },
      "expect": {
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "query_before",
      "tx": {
        "to": "sc:requests",
        "function": "getRequests",
        "arguments": [
          "42"
        ]
      },
      "expect": {
        "out": [
          "100"
        ]
      }
    },
    {
      "step": "scCall",
      "txId": "change_rate",
      "tx": {
        "from": "address:owner",
        "to": "sc:requests",
        "function": "changeNumRequestsPerEGLD",
        "arguments": [
          "200"
        ],
        "gasLimit": "5000000",
        "gasPrice": "1000000000"
      },
      "expect": {
        "status": "0"
      }
    },
    {
      "step": "scCall",
      "txId": "add_requests_2",
      "tx": {
        "from": "address:user",
        "to": "sc:requests",
        "function": "addRequests",
        "arguments": [
          "42"
        ],
        "value": "1000000000000000000",
        "gasLimit": "5000000",
        "gasPrice": "1000000000"
      },
      "expect": {
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "query_after",
      "tx": {
        "to": "sc:requests",
        "function": "getRequests",
        "arguments": [
          "42"
        ]
      },
      "expect": {
        "out": [
          "300"
        ]
      }
    }
  ]
}