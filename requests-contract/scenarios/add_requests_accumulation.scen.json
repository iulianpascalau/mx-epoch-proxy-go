{
  "name": "Add requests accumulation for same user",
  "comment": "Same user adds requests multiple times, balance should accumulate",
  "steps": [
    {
      "step": "setState",
      "accounts": {
        "address:owner": {
          "nonce": "1",
          "balance": "1000000000000000000"
        },
        "address:user": {
          "nonce": "0",
          "balance": "5000000000000000000"
        }
      },
      "newAddresses": [
        {
          "creatorAddress": "address:owner",
          "creatorNonce": "1",
          "newAddress": "sc:requests"
        }
      ]
    },
    {
      "step": "scDeploy",
      "txId": "deploy",
      "tx": {
        "from": "address:owner",
        "contractCode": "mxsc:../output/requests.mxsc.json",
        "arguments": [
          "100"
        ],
        "gasLimit": "60000000",
        "gasPrice": "1000000000"
      }
    },
    {
      "step": "scCall",
      "txId": "add_first",
      "tx": {
        "from": "address:user",
        "to": "sc:requests",
        "function": "addRequests",
        "arguments": [
          "42"
        ],
        "value": "1000000000000000000",
        "gasLimit": "5000000",
        "gasPrice": "1000000000"
      },
      "expect": {
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "query_first",
      "tx": {
        "to": "sc:requests",
        "function": "getRequests",
        "arguments": [
          "42"
        ]
      },
      "expect": {
        "out": [
          "100"
        ]
      }
    },
    {
      "step": "scCall",
      "txId": "add_second",
      "tx": {
        "from": "address:user",
        "to": "sc:requests",
        "function": "addRequests",
        "arguments": [
          "42"
        ],
        "value": "500000000000000000",
        "gasLimit": "5000000",
        "gasPrice": "1000000000"
      },
      "expect": {
        "status": "0"
      }
    },
    {
      "step": "scQuery",
      "txId": "query_second",
      "tx": {
        "to": "sc:requests",
        "function": "getRequests",
        "arguments": [
          "42"
        ]
      },
      "expect": {
        "out": [
          "150"
        ]
      }
    }
  ]
}